<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Tasks" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Tasks</h1>
  </div>

  <%= form_with(model: @new_task, class: "contents") do |form| %>
    <% if @new_task.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
        <h2><%= pluralize(@new_task.errors.count, "error") %> prohibited this task from being saved:</h2>

        <ul>
          <% @new_task.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="my-5">
      <%= form.text_field :name, required: true, autofocus: true, placeholder: "New task", class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
    </div>
  <% end %>

  <div id="tasks" class="min-w-full">
    <ul>
      <% @tasks.each do |task| %>
        <li>
          <%= link_to task.name, task, class: "inline-block" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
