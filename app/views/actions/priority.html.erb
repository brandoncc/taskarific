<%= turbo_frame_tag [dom_id(task), :action_bar] do %>
  <div class="mt-2 flex flex-row gap-2">
    <% Task.priorities.each do |priority, value| %>
      <%= button_to task, action: :patch, params: { task: { priority: priority } } do %>
        <%= render 'components/badge' do %>
          <%= priority %>
        <% end %>
      <% end %>
    <% end %>
  </div>
<% end %>
