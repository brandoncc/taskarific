<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Tasks" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Tasks</h1>
  </div>

  <%= form_with(model: @new_task, class: "contents") do |form| %>
    <% if @new_task.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
        <h2><%= pluralize(@new_task.errors.count, "error") %> prohibited this task from being saved:</h2>

        <ul>
          <% @new_task.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="my-5">
      <%= form.text_field :name, required: true, autofocus: true, placeholder: "New task", class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
    </div>
  <% end %>

  <div id="new-tasks" class="min-w-full mb-8">
    <h2 class="text-2xl mb-2">Incomplete tasks</h2>

    <% @tasks.not_completed_status.tap do |incomplete_tasks| %>
      <% Task.priorities.keys.each do |priority_name| %>
        <% incomplete_tasks.send(:"prioritize_#{priority_name}").tap do |tasks| %>
          <section>
            <h3 class="text-xl my-2"><%= priority_name.humanize %></h3>
            <ul>
              <% tasks.each do |task| %>
                <li class="my-2">
                  <%= render 'tasks/preview', task: task %>
                </li>
              <% end %>
            </ul>
          </section>
        <% end %>
      <% end %>
    <% end %>
  </div>

  <div id="completed-tasks" class="min-w-full">
    <h2 class="text-2xl mb-2">Completed tasks</h2>
    <ul>
      <% @tasks.completed_status.each do |task| %>
        <li>
          <%= render 'tasks/preview', task: task %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
